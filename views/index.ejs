<%- include('layout/head')%>
    <div class="content">
        <%- include('utils/search')%>
        <div class="container">
            <% for(let book of books){%>
                <div class="card">
                    <div class="card-header">
                        <h2><%= book.title%></h2>
                    </div>
        
                    <div class="card-body">
                        <div class="card-body__tile">
                            <p>Author:</p>
                            <p><%= book.Author.name%></p>
                        </div>
        
                        <div class="card-body__tile">
                            <p>Publication date:</p>
                            <p><%= book.publicationDate%></p>
                        </div>
        
                        <div class="card-body__tile">
                            <p>ISBN number:</p>
                            <p><%= book.isbnNumber%></p>
                        </div>
        
                        <div class="card-body__tile">
                            <p>Number of pages:</p>
                            <p><%= book.numberOfPages%></p>
                        </div>
                        
                        <div class="card-body__tile">
                            <p>Publication language:</p>
                            <p><%= book.publicationLanguage%></p>
                        </div>
        
                        <div class="update-tile">
                            <a href="/edit/<%= book.id%>" >edit</a>
                        </div>
        
                    </div>
                </div>
            <%}%>
    
            
        </div>        
    </div>

<%- include('layout/bottom')%>